	<body>
		<p class="top_navi"><a href="/<!--PRESET_SITE_TOP_URI-->"><!--PRESET_ENGINE_NAME--> トップ</a> &gt; ユーザー一覧</p>
		<h1><!--PRESET_ENGINE_NAME--> ユーザー一覧</h1>

		<div class="unit">
			<h2>ユーザー一覧</h2>
			<div class="subunit">
				<table class="list">
					<tbody>
						<% users.each do |user| %>
							<% next if user.uid == '00001' %>
							<tr>
								<th rowspan="2"><%= user.uid %></th>
								<td class="text">
									<a href="/view/<%= user.uid %>">
										<%= user.name.split(//u)[0, 8].join('') %>
										<%= '...' if user.name.split(//u).size > 8 %>
									</a>
								</td>
								<td class="number"><%= (user.cxbid.to_i == 0 ? '' : user.cxbid) %></td>
								<td class="number"><%= sprintf("%.2f", user.rp) %></td>
							</tr>
							<tr>
								<td colspan="3" class="text">
									<% if user.comment.size == 0 %>
										&nbsp;
									<% else %>
										<%= user.comment.split(//u)[0, 30].join('') %>
										<%= '...' if user.comment.split(//u).size > 30 %>
									<% end %>
								</td>
							</tr>
						<% end %>
					</tbody>
				</table>
			</div>
		</div>

		<!--PRESET_FOOTER-->
	</body>
</html>
